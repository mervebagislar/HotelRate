@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model HotelRate2.Models.Kullanicilar

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HotelRate</title>

    <!-- Favicons -->
    <link href="/img/bannerIcon.png" rel="icon">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Inter&family=Cardo&display=swap" rel="stylesheet">

    <!-- Vendor CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="/vendor/aos/aos.css" rel="stylesheet">

    <!-- Main CSS -->
    <link href="/css/main.css" rel="stylesheet">
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header d-flex align-items-center fixed-top">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <a asp-controller="Giris" asp-action="Index" class="logo d-flex align-items-center me-auto me-lg-0">
                <img src="/img/bannerIcon.png" alt="">
                <h1>HotelRate</h1>
            </a>

            <nav id="navbar" class="navbar px-4">
                <ul>
                    <li><a asp-controller="Iletisim" asp-action="Index">İletişim</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section id="hero" class="hero d-flex flex-column justify-content-center align-items-center"
             data-aos="fade" data-aos-delay="1500">

        <section class="background-radial-gradient overflow-hidden">
            <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
                <div class="row gx-lg-5 align-items-center mb-5">

                    <div class="col-lg-6 mb-5 mb-lg-0">
                        <h1 class="my-5 display-5 fw-bold ls-tight text-light">
                            HOTEL RATE <br />
                            <span class="text-success">Hoş Geldiniz! Otel Deneyimlerinizi Paylaşın!</span>
                        </h1>

                        <p class="opacity-75 text-light">
                            Merhaba sevgili gezgin! Otel deneyiminiz diğer gezginlere rehber oluyor.
                            Deneyiminizi paylaşarak katkı sağlayın ve fırsatları yakalayın!
                        </p>
                    </div>

                    <div class="col-lg-6 mb-5 mb-lg-0">
                        <div class="card bg-glass">
                            <div class="card-body px-4 py-5 px-md-5">

                                <form asp-controller="Giris" asp-action="Index" method="post">

                                    <div class="mb-3">
                                        <input asp-for="Ad" class="form-control" required />
                                        <label asp-for="Ad" class="form-label"></label>
                                    </div>

                                    <div class="mb-3">
                                        <input asp-for="Soyad" class="form-control" required />
                                        <label asp-for="Soyad" class="form-label"></label>
                                    </div>

                                    <div class="mb-3">
                                        <input asp-for="Email" class="form-control" />
                                        <label asp-for="Email" class="form-label"></label>
                                    </div>

                                    <div class="mb-3">
                                        <input asp-for="DogumTarihi" type="date" class="form-control" />
                                        <label asp-for="DogumTarihi" class="form-label">Doğum Tarihi</label>
                                    </div>

                                    <div class="mb-3">
                                        <h6>Cinsiyet:</h6>

                                        <div class="form-check form-check-inline">
                                            <input asp-for="Cinsiyet" class="form-check-input" type="radio" value="0" />
                                            <label class="form-check-label">Kadın</label>
                                        </div>

                                        <div class="form-check form-check-inline">
                                            <input asp-for="Cinsiyet" class="form-check-input" type="radio" value="1" />
                                            <label class="form-check-label">Erkek</label>
                                        </div>

                                        <div class="form-check form-check-inline">
                                            <input asp-for="Cinsiyet" class="form-check-input" type="radio" value="2" />
                                            <label class="form-check-label">Diğer</label>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-success w-100">
                                        Otel Seç ve Ankete Katıl
                                    </button>

                                </form>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </section>
    </section>
    <!-- End Hero -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="container text-center">
            <p>&copy; HotelRate. All Rights Reserved</p>
        </div>
    </footer>

    <a href="#" class="scroll-top d-flex align-items-center justify-content-center">
        <i class="bi bi-arrow-up-short"></i>
    </a>

    <div id="preloader"><div class="line"></div></div>

    <!-- Vendor JS -->
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="/vendor/aos/aos.js"></script>
    <script src="/vendor/php-email-form/validate.js"></script>

    <!-- Main JS -->
    <script src="/js/main.js"></script>

</body>
</html>
