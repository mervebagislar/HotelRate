@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<HotelRate2.Models.Otel>

@{
    int sayac = 0;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HotelRate-Survey</title>

    <!-- Favicons -->
    <link href="/img/bannerIcon.png" rel="icon">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Inter&family=Cardo&display=swap" rel="stylesheet">

    <!-- Vendor CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="/vendor/aos/aos.css" rel="stylesheet">

    <!-- Main CSS -->
    <link href="/css/main.css" rel="stylesheet">
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header d-flex align-items-center fixed-top">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <a asp-controller="Anasayfa" asp-action="Index" class="logo d-flex align-items-center me-auto me-lg-0">
                <img src="/img/bannerIcon.png" alt="">
                <h1>HotelRate</h1>
            </a>
            <nav id="navbar" class="navbar px-4">
                <ul>
                    <li><a asp-controller="Anasayfa" asp-action="Index">Anasayfa</a></li>
                    <li><a asp-controller="Iletisim" asp-action="Index">İletişim</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <!-- End Header -->

    <main id="main" data-aos="fade" data-aos-delay="1500">

        <div class="page-header d-flex align-items-center">
            @foreach (var otel in Model)
            {
                <div class="container position-relative">
                    <div class="row d-flex justify-content-center">
                        <div class="col-lg-6 text-center">
                            <h2>@otel.OtelAdi</h2>
                            <p class="text-success">Anketiniz başarıyla tamamlanmıştır 🎉</p>
                            <img src="/img/gallery/green-tick.gif" class="img-fluid" alt="Başarılı">
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row align-items-center justify-content-center">
            <div class="card bg-success text-white col-lg-5 m-3 p-2">
                <div class="card-body text-center">
                    <a asp-controller="Anasayfa" asp-action="Index" class="text-white">
                        <h5 class="card-title">Ana Sayfaya dönmek için tıklayınız</h5>
                    </a>
                </div>
            </div>

            <div class="card bg-dark text-white col-lg-5 m-3 p-2">
                <div class="card-body text-center">
                    <a asp-controller="Istatistik" asp-action="Index" class="text-white">
                        <h5 class="card-title">Otel İstatistikleri için tıklayınız</h5>
                    </a>
                </div>
            </div>
        </div>

    </main>

    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="container">
            <div class="copyright">
                &copy; HotelRate. All Rights Reserved
            </div>
        </div>
    </footer>

    <a href="#" class="scroll-top d-flex align-items-center justify-content-center">
        <i class="bi bi-arrow-up-short"></i>
    </a>

    <div id="preloader">
        <div class="line"></div>
    </div>

    <!-- Vendor JS -->
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="/vendor/aos/aos.js"></script>
    <script src="/vendor/php-email-form/validate.js"></script>

    <!-- Main JS -->
    <script src="/js/main.js"></script>

</body>
</html>
